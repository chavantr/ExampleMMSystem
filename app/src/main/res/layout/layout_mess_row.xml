<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"

              android:layout_width="match_parent"
              android:padding="7dp"
              android:background="@drawable/rectangle_shape"
              android:layout_height="wrap_content">


    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:textColor="@color/colorAccent" android:id="@+id/lblName"/>

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:textColor="@color/colorAccent" android:id="@+id/lblLocalarea" android:visibility="gone"/>

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:textColor="@color/colorAccent" android:id="@+id/lblFoodType" android:visibility="gone"/>

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:textColor="@color/colorAccent"  android:id="@+id/lblMessType"
              android:visibility="gone"/>

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:textColor="@color/colorAccent" android:id="@+id/lblRating"
              android:visibility="gone"/>

</LinearLayout>